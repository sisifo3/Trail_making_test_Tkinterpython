	def del_all(self):
		self.text1.destroy() #destrui un botton necesito crear otro
		self.text2.destroy()
		self.text3.destroy()
		self.text4.destroy()
		self.text5.destroy()
		self.text6.destroy()
		self.text7.destroy()
		self.text8.destroy()
		self.text9.destroy()
		#necesitamos llamar una funcion que cree de nuevo los botones en diferentes posiciones
		Window.create_button(self) 
	
