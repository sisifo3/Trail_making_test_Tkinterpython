	def emerg_wind(self):
		Window_emrg = tk.Toplevel(app)  
		Window_emrg.geometry("500x500")
		Window_emrg.configure(background='snow')		
		label = Label(Window_emrg, text = "Parte 2",bg = "snow")
		label.place(x=230,y=10)
		label1 = Label(Window_emrg, text ="En la segunda parte de la prueba, se muestran un conjunto", bg = "snow",anchor=W)
		label1.place(x=30,y=30)
		label2 = Label(Window_emrg, text ="de palabras, estas de diferentes colores, el participante", bg = "snow",anchor=W)
		label2.place(x=30,y=50)
		label3 = Label(Window_emrg, text ="dependiendo de las indicaciones, tendrá que decir el color ", bg = "snow",anchor=W)
		label3.place(x=30,y=70)
		label4 = Label(Window_emrg, text ="o leer la palabra, el evaluador  deberá seleccionar si la ", bg = "snow",anchor=W)
		label4.place(x=30,y=90)
		label5 = Label(Window_emrg, text ="respuesta del participante es correcta o incorrecta", bg = "snow",anchor=W)
		label5.place(x=30,y=110)
		label6 = Label(Window_emrg, text ="Comenzar", bg = "snow",anchor=W)
		label6.place(x=170,y=200)
		bottonno = tk.Button(Window_emrg,text ="no",bg = "light blue")
		bottonno.place(x=200,y=250)
		bottonsi = tk.Button(Window_emrg,text ="si",bg = "light blue",command =Window_emrg.destroy)
		bottonsi.place(x=170,y=250)
		
	
	
